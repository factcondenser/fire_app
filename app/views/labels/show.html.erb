<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @label %>

    <%= link_to 'Edit this label', edit_label_path(@label), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this label', label_path(@label), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to labels', labels_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
