<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Log In</h1>

  <%= form_with(model: @login, class: 'contents') do |f| %>
    <% if @login.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(@login.errors.count, "error") %> prevented login:</h2>

        <ul>
          <% @login.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :email %>
      <%= f.text_field :email, autofocus: true %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="inline">
      <%= f.submit 'Log In', class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>
